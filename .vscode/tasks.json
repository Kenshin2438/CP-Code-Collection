{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "CppBuild",
            "command": "g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "-Wall",
                "-Wextra",
                "-Wfloat-equal",
                "-Wl,--stack=268435456",
                "-O2",
                "-std=gnu++17",
                "-DLOCAL", // Debug
                "-ID:\\Document\\repos\\Code-of-ACM\\template\\debug",
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": false,
                "showReuseMessage": false,
            }
        },
        { // 配置 "F8" 编译运行
            "type": "shell", 
            "label": "CppRun",
            "dependsOn": "CppBuild",
            "command": "${fileDirname}\\${fileBasenameNoExtension}.exe",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "echo": false,
                "focus": true,
                "panel": "shared",
            },
        }
    ]
}